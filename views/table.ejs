<div class="container mt-5">
  <div class="row">
    <div class="col">
      <% if(msg.length !== 0){ %>
      <div class="alert alert-success alert-dismissible fade show d-grid text-start" role="alert"><%= msg %> <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></div>
      <% } %>
      <div class="card">
        <h5 class="card-header">Data Sekolah</h5>
        <div class="card-body">
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nama</th>
                <th scope="col">Jenis</th>
                <th scope="col">Alamat</th>
                <th scope="col">Koordinat</th>
                <th scope="col">Aksi</th>
              </tr>
            </thead>
            <tbody>
              <% let num = 0 %> <% sekolah.forEach(item => { %>
              <tr>
                <th scope="row"><%= ++num %></th>
                <td><%= item.nama_sekolah %></td>
                <td><%= item.jenis_sekolah %></td>
                <td><%= item.alamat %></td>
                <td><%= item.latitude %>, <%= item.longitude %></td>
                <td>
                  <a href="/table/<%= item._id %>" class="btn btn-info badge"><i class="bi bi-pencil-square"></i></a>
                  <button type="button" class="btn btn-danger badge" data-bs-toggle="modal" data-bs-target="#id<%= item._id %>"><i class="bi bi-trash"></i></button>
                </td>
              </tr>

              <!-- Modal -->
              <div class="modal fade" id="id<%= item._id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h1 class="modal-title fs-5" id="exampleModalLabel">Perhatian!</h1>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">Anda yakin ingin menghapus data?</div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tidak</button>
                      <a href="/table/delete/<%= item._id %>" class="btn btn-primary">Ya, hapus</a>
                    </div>
                  </div>
                </div>
              </div>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
