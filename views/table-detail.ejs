<div class="container mt-5">
  <div class="row">
    <div class="col">
      <div class="card">
        <h5 class="card-header">Edit Sekolah</h5>
        <div class="card-body">
          <form action="/table?_method=PUT" method="POST">
            <div class="mb-3">
              <label for="namasekolah" class="form-label">Nama Sekolah</label>
              <input type="text" class="form-control" id="namasekolah" aria-describedby="emailHelp" placeholder="Masukkan nama sekolah" name="nama_sekolah" value="<%= sekolah.nama_sekolah %>" required />
            </div>
            <div class="mb-3">
              <label for="jenis_sekolah" class="form-label">Jenis Sekolah</label>
              <select class="form-select" aria-label="Default select example" name="jenis_sekolah" required>
                <option selected hidden>Pilih jenis sekolah</option>
                <option value="Sekolah Dasar" <%= sekolah.jenis_sekolah === "Sekolah Dasar"?"selected":"" %> >Sekolah Dasar</option>
                <option value="Madrasah Ibtidaiyah" <%= sekolah.jenis_sekolah === "Madrasah Ibtidaiyah"?"selected":"" %>>Madrasah Ibtidaiyah</option>
                <option value="Sekolah Menengah Pertama" <%= sekolah.jenis_sekolah === "Sekolah Menengah Pertama"?"selected":"" %>>Sekolah Menengah Pertama</option>
                <option value="Madrasah Tsanawiyah" <%= sekolah.jenis_sekolah === "Madrasah Tsanawiyah"?"selected":"" %>>Madrasah Tsanawiyah</option>
                <option value="Sekolah Menengah Atas" <%= sekolah.jenis_sekolah === "Sekolah Menengah Atas"?"selected":"" %>>Sekolah Menengah Atas</option>
                <option value="Sekolah Menengah Kejuruan" <%= sekolah.jenis_sekolah === "Sekolah Menengah Kejuruan"?"selected":"" %>>Sekolah Menengah Kejuruan</option>
                <option value="Madrasah Aliyah" <%= sekolah.jenis_sekolah === "Madrasah Aliyah"?"selected":"" %>>Madrasah Aliyah</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="alamat" class="form-label">Alamat</label>
              <textarea name="alamat" class="form-control" id="alamat" cols="30" rows="6" style="resize: none" placeholder="Masukkan alamat sekolah" required><%= sekolah.alamat %></textarea>
            </div>
            <div class="mb-3">
              <label for="latitude" class="form-label">Latitude</label>
              <input type="text" class="form-control" id="latitude" name="latitude" placeholder="Masukkan latitude sekolah" value="<%= sekolah.latitude %>" required />
            </div>
            <div class="mb-3">
              <label for="longitude" class="form-label">Longitude</label>
              <input type="text" class="form-control" id="longitude" name="longitude" placeholder="Masukkan longitude sekolah" value="<%= sekolah.longitude %>" required />
            </div>
            <input type="hidden" value="<%= sekolah._id %>" name="id">
            <button type="submit" class="btn btn-primary">Edit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
