<div class="container">
  <div class="row">
    <div class="col d-flex justify-content-center">
      <div class="card log-reg-card">
        <div class="card-body">
          <h2 class="card-title text-center fw-bold">Login</h2>
          <h6 class="text-muted text-center">One step closer</h6>
          <form action="/login" method="POST" class="mt-4">
            <% if (locals.msg) { %>
            <div class="d-grid alert alert-danger badge text-start" role="alert"><%= msg %></div>
            <% } %>
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input type="text" class="form-control" id="username" name="username" value="<%= locals.prevData? prevData.username:null %>" autocomplete="off" />
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password" />
              <div id="passwordHelp" class="form-text text-danger"><%= locals.errors?errors[0].msg:null %></div>
            </div>
            <div class="d-grid">
              <button type="submit" class="btn btn-primary mt-3">Login</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
